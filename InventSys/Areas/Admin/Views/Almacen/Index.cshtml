

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-6">
        <h2 class="text-primary">Almacenes</h2>
    </div>
    <div class="col-lg-6">
        <a asp-action="Actualizar" class="btn btn-outline-primary"><i class="bi bi-plus-circle-fill"></i> Nuevo Almacen</a>
    </div>
</div>
<br />
<div class="p-4 border rounded bg-light">
        <table id="tblAlmacenes" class="table table-responsive table-hover" style="width:100%">
        <thead class="table-dark">
            <tr>
                
                <th>Nombre</th>
                <th>Descripcion</th>
                <th>Dirección</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>

    </table>
</div>

@section Scripts{
    <script asp-append-version="true" src="~/js/Almacenes.js"></script>
}